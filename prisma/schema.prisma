generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  tags      String[]
  category  String
  caption   String
  imageUrl  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String  @unique
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
  password String
  posts    Post[]
  profile  Profile?
  tasks    Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  status    Status   @default(BACKLOG)
  priority  Priority @default(MEDIUM)
  title     String
  tag       String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  BACKLOG
  TODO
  IN_PROGRESS
  DONE
  CANCELED
}
